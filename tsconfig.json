{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "build",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
